<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.GrammarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <Button
            android:id="@+id/button_grammar_theory"
            style="@style/MyVocabularyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:text="@string/grammar_theory_button"
            android:textSize="18sp"
            app:icon="@drawable/ic_book_24"
            app:iconPadding="12dp"
            app:iconGravity="textStart"/>

        <Button
            android:id="@+id/button_grammar_practice"
            style="@style/MyVocabularyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:text="@string/grammar_practice_button"
            android:textSize="18sp"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconPadding="12dp"
            app:iconGravity="textStart"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
